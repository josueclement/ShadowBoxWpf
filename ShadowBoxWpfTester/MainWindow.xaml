<Window x:Class="ShadowBoxWpfTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShadowBoxWpfTester"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Background="{DynamicResource Obsidian.Brushes.Background}">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Normal button" Margin="10" />
            <Button Content="Accent1 button" Style="{DynamicResource Accent1}" Margin="10" />
            <Button Content="Accent2 button" Style="{DynamicResource Accent2}" Margin="10" />
            <Button Content="Test" Margin="10" IsEnabled="False" />
        </StackPanel>
    </Grid>
</Window>
